{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "Countries' Healthy life expectancy",
    "data": {
        "url": "https://yujunliu95.github.io/VegaLiteVisualization/WHR2023.csv"
    },
    "params": [
        {
            "name": "Health",
            "value": 0,
            "bind": {
                "input": "range",
                "min": 0,
                "max": 100,
                "step": 1,
                "name": "Minimum Healthy Life Expectancy: "
            }
        }
    ],
    "transform": [
        {
            "filter": "datum.Healthy_life_expectancy >= Health"
        }
    ],
    "layer": [
        {
            "mark": "point",
            "encoding": {
                "x": {
                    "field": "Healthy_life_expectancy",
                    "type": "quantitative",
                    "axis": {
                        "title": "Healthy Life Expectancy"
                    }
                },
                "y": {
                    "field": "Ladder score",
                    "type": "quantitative",
                    "axis": {
                        "title": "Happiness Ladder Score"
                    }
                },
                "color": {
                    "field": "Regional_Indicator",
                    "type": "nominal",
                    "legend": {
                        "title": "Region"
                    }
                },
                "size": {
                    "value": 100
                },
                "tooltip": [
                    {"field": "Country", "type": "nominal"},
                    {"field": "Healthy_life_expectancy", "type": "quantitative"},
                    {"field": "Ladder score", "type": "quantitative"}
                ]
            }
        },
        {
            "mark": "text",
            "encoding": {
                "x": {
                    "field": "Healthy_life_expectancy",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Ladder score",
                    "type": "quantitative"
                },
                "text": {
                    "field": "Country",
                    "type": "nominal"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.Country == 'Australia'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        },
        {
            "mark": "rule",
            "encoding": {
                "x": {
                    "field": "Healthy_life_expectancy",
                    "type": "quantitative"
                },
                "y": {
                    "field": "Ladder score",
                    "type": "quantitative"
                },
                "opacity": {
                    "condition": {
                        "test": "datum.Country == 'Australia'",
                        "value": 1
                    },
                    "value": 0
                }
            }
        }
    ]
  }
  